# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Hugging Face API
HUGGING_FACE_API_KEY=your_hugging_face_api_token

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Python Microservice
PYTHON_SERVICE_URL=http://localhost:8000
CLAUDE_CODE_PATH=/usr/local/bin/claude-code

# Database (for local development - overrides Supabase if set)
DATABASE_URL=postgresql://user:password@localhost:5432/alacard

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_for_tokens
ENCRYPTION_KEY=your_32_character_encryption_key

# External Services
# OpenAI API (if using for generation fallback)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (if using Claude API instead of Claude Code binary)
ANTHROPIC_API_KEY=your_anthropic_api_key

# File Storage
MAX_FILE_SIZE_MB=100
STORAGE_BUCKET_NAME=notebooks

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring/Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking